<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="ExtraText">

    <LinearLayout
        android:id="@+id/survey_layout_nocucoche"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        style="@style/SurveySingleQuestion"
        android:visibility="gone">

        <TextView
            android:id="@+id/survey_text_nocucoche"
            style="@style/SurveyQuestionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/survey_text_nocucoche"
            android:visibility="visible" />

        <TextView
            android:id="@+id/survey_text_nocucoche_AGP"
            style="@style/SurveyQuestionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/survey_text_nocucoche_AGP"
            android:visibility="gone" />

        <RadioGroup
            android:id="@+id/survey_radiogroup_nocucoche"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/survey_text_nocucoche"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/survey_radio_nocucoche_option1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/survey_radio_nocucoche_option1" />

            <RadioButton
                android:id="@+id/survey_radio_nocucoche_option2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/survey_radio_nocucoche_option2" />

            <RadioButton
                android:id="@+id/survey_radio_nocucoche_option3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/survey_radio_nocucoche_option3" />

        </RadioGroup>
    </LinearLayout>
</LinearLayout>
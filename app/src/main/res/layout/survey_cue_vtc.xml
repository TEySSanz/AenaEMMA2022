<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="ExtraText">

    <LinearLayout
        android:id="@+id/survey_layout_vtc"
        style="@style/SurveySingleQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/survey_text_vtc"
            style="@style/SurveyQuestionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/survey_m1_text_vtc"
            android:visibility="visible" />

        <RadioGroup
            android:id="@+id/survey_radiogroup_vtc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/survey_radio_vtc_option1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/survey_m1_radio_vtc_option1" />

            <RadioButton
                android:id="@+id/survey_radio_vtc_option2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/survey_m1_radio_vtc_option2" />

            <RadioButton
                android:id="@+id/survey_radio_vtc_option3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/survey_m1_radio_vtc_option3" />

            <RadioButton
                android:id="@+id/survey_radio_vtc_option9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/survey_m1_radio_vtc_option9" />

        </RadioGroup>

        //VTC_otros

        <LinearLayout
            android:id="@+id/survey_layout_vtc_otros"
            style="@style/SurveySingleQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/survey_edit_text_vtc_otros"
                style="@style/SurveyQuestionLiteral"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/survey_m1_text_cdalojin_otros" />


            <EditText
                android:id="@+id/survey_edit_vtc_otros"
                style="@style/SurveyQuestionEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>
    </LinearLayout>
</LinearLayout>
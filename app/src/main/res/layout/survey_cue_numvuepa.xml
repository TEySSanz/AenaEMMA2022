<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="ExtraText">

    <LinearLayout
        android:id="@+id/survey_layout_numvuepa"
        style="@style/SurveySingleQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

            <TextView
                android:id="@+id/survey_text_numvuepa"
                style="@style/SurveyQuestionTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/survey_m1_text_numvuepa"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/survey_text_numvuepa_m4"
                style="@style/SurveyQuestionTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/survey_m4_text_numvuepa"
                android:visibility="gone"/>

            <es.testadistica.www.aenaemma2022.utilidades.SearchableSpinnerOLD
                android:id="@+id/survey_spinner_numvuepa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@android:drawable/btn_dropdown"
                android:gravity="center"
                android:spinnerMode="dropdown" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/survey_text_numvuepa_companyCode"
                style="@style/SurveyQuestionTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="XXX-" />

            <EditText
                android:id="@+id/survey_edit_numvuepa"
                style="@style/SurveyQuestionEdit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="XXXXX"
                android:inputType="number"
                android:maxLength="5" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

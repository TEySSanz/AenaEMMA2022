<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="ExtraText">

    <LinearLayout
        android:id="@+id/survey_layout_cdsexo"
        style="@style/SurveySingleQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/survey_text_cdsexo"
            style="@style/SurveyQuestionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/survey_m1_text_cdsexo"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/survey_text_cdsexo_m4"
            style="@style/SurveyQuestionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/survey_m4_text_cdsexo"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/survey_text_cdsexo_GC"
            style="@style/SurveyQuestionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/survey_GC_text_cdsexo"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/survey_text_cdsexo_m5"
            style="@style/SurveyQuestionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/survey_m5_text_cdsexo"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/survey_text_cdsexo_m5_MAH"
            style="@style/SurveyQuestionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/survey_m5_MAH_text_cdsexo"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/survey_text_cdsexo_m2"
            style="@style/SurveyQuestionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/survey_m2_text_cdsexo"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/survey_text_cdsexo_SCQ"
            style="@style/SurveyQuestionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/survey_SCQ_text_cdsexo"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/survey_text_cdsexo_GRO"
            style="@style/SurveyQuestionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/survey_GRO_text_cdsexo"
            android:visibility="gone"/>

        <RadioGroup
            android:id="@+id/survey_radiogroup_cdsexo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/survey_radio_cdsexo_option1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/survey_m1_radio_cdsexo_option1" />

            <RadioButton
                android:id="@+id/survey_radio_cdsexo_option2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/survey_m1_radio_cdsexo_option2" />
        </RadioGroup>

    </LinearLayout>
</LinearLayout>
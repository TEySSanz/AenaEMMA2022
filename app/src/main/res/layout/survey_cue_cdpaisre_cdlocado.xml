<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="ExtraText">

    <LinearLayout
        android:id="@+id/survey_layout_cdpaisre"
        style="@style/SurveySingleQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">


        <TextView
            android:id="@+id/survey_text_cdpaisre"
            style="@style/SurveyQuestionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/survey_m1_text_cdpaisre" />

        <es.testadistica.www.aenaemma2022.utilidades.SearchableSpinner
            android:id="@+id/survey_spinner_cdpaisre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown" />

        <LinearLayout
            android:id="@+id/survey_layout_cdlocado_esp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/standard_padding"
            android:layout_marginTop="@dimen/standard_padding"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/survey_layout_cdlocado_prov"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/standard_padding"
                android:layout_marginTop="@dimen/standard_padding"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:id="@+id/survey_text_cdlocado_prov"
                    style="@style/SurveyQuestionTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center|center_horizontal"
                    android:text="@string/survey_m1_text_cdpaisre_prov" />

                <es.testadistica.www.aenaemma2022.utilidades.SearchableSpinner
                    android:id="@+id/survey_spinner_cdlocado_prov"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"
                    android:background="@android:drawable/btn_dropdown"
                    android:spinnerMode="dropdown" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/survey_layout_cdlocado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/standard_padding"
                android:layout_marginTop="@dimen/standard_padding"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:id="@+id/survey_text_cdlocado"
                    style="@style/SurveyQuestionTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/standard_padding"
                    android:gravity="center"
                    android:text="@string/survey_m1_text_cdlocado" />


                <es.testadistica.www.aenaemma2022.utilidades.SearchableSpinner
                    android:id="@+id/survey_spinner_cdlocado"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"
                    android:background="@android:drawable/btn_dropdown"
                    android:spinnerMode="dropdown" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/survey_layout_distres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/standard_padding"
                android:layout_marginTop="@dimen/standard_padding"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/survey_text_distres"
                    style="@style/SurveyQuestionTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/standard_padding"
                    android:gravity="center"
                    android:text="@string/survey_m1_text_distres" />


                <es.testadistica.www.aenaemma2022.utilidades.SearchableSpinner
                    android:id="@+id/survey_spinner_distres"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"
                    android:background="@android:drawable/btn_dropdown"
                    android:spinnerMode="dropdown" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/survey_layout_cdlocado_no_esp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/standard_padding"
            android:layout_marginTop="@dimen/standard_padding"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/survey_layout_distres_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/standard_padding"
                android:layout_marginTop="@dimen/standard_padding"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:id="@+id/survey_text_distres_area"
                    style="@style/SurveyQuestionTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/standard_padding"
                    android:gravity="center"
                    android:text="@string/survey_m1_text_distres_area" />


                <es.testadistica.www.aenaemma2022.utilidades.SearchableSpinner
                    android:id="@+id/survey_spinner_distres_area"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"
                    android:background="@android:drawable/btn_dropdown"
                    android:spinnerMode="dropdown" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>

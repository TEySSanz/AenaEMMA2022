<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="ExtraText">


    <LinearLayout
        android:id="@+id/survey_layout_modo_s4"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/md_blue_grey_200"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/survey_text_ultimodo"
            style="@style/SurveyQuestionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/aenaDarkGrey"
            android:text="@string/survey_text_modo_s4"
            android:visibility="visible" />


        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/survey_layout_tabla"
                android:layout_width="match_parent"
                android:layout_height="480dp"
                android:orientation="horizontal"
                android:textAlignment="gravity"
                android:visibility="visible">


                <!--- 1 columna -->
                <LinearLayout
                    android:id="@+id/survey_layout_vertical_ultimodo_1col"
                    android:layout_width="99dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/survey_text_ultimodo_1col"
                        android:layout_width="match_parent"
                        android:layout_height="96dp"
                        android:background="@color/aenaDarkGrey" />

                    <TextView
                        android:id="@+id/survey_text_ultimodo_taxi"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginTop="@dimen/medium_padding"
                        android:background="@color/aenaDarkGrey"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="@string/survey_m1_text_ultimodo_taxi" />

                    <TextView
                        android:id="@+id/survey_text_ultimodo_coche"
                        android:layout_width="match_parent"
                        android:layout_height="111dp"
                        android:layout_marginTop="@dimen/medium_padding"
                        android:background="@color/aenaDarkGrey"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="@string/survey_m1_text_ultimodo_coche" />

                    <TextView
                        android:id="@+id/survey_text_ultimodo_autobus"
                        android:layout_width="match_parent"
                        android:layout_height="111dp"
                        android:layout_marginTop="@dimen/medium_padding"
                        android:background="@color/aenaDarkGrey"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="@string/survey_m1_text_ultimodo_autobus"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/survey_text_ultimodo_tren"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginTop="@dimen/medium_padding"
                        android:background="@color/aenaDarkGrey"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="@string/survey_m1_text_ultimodo_tren" />

                    <TextView
                        android:id="@+id/survey_text_ultimodo_metro"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginTop="@dimen/medium_padding"
                        android:background="@color/aenaDarkGrey"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="@string/survey_m1_text_ultimodo_metro" />

                    <TextView
                        android:id="@+id/survey_text_ultimodo_otros_1col"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginTop="@dimen/medium_padding"
                        android:background="@color/aenaDarkGrey"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="@string/survey_m1_text_ultimodo_otros" />


                </LinearLayout>

                <!--- 2 columna -->
                <LinearLayout
                    android:id="@+id/survey_layout_ultimodo_2col"
                    android:layout_width="460dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/survey_text_ultimodo_2col"
                        style="@style/SurveyQuestionTitle"
                        android:layout_width="match_parent"
                        android:layout_height="96dp"
                        android:background="@color/aenaDarkGrey"
                        android:gravity="center_horizontal|center_vertical" />

                    <TextView
                        android:id="@+id/survey_text_ultimodo_2col_1"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginTop="@dimen/medium_padding"
                        android:background="@color/aenaDarkGrey"
                        android:gravity="center_horizontal|center_vertical" />

                    <TextView
                        android:id="@+id/survey_text_ultimodo_vtc"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginTop="@dimen/medium_padding"
                        android:background="@color/aenaDarkGrey"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="@string/survey_m1_text_ultimodo_coche_vtc" />

                    <TextView
                        android:id="@+id/survey_text_ultimodo_valquiler"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginTop="@dimen/medium_padding"
                        android:background="@color/aenaDarkGrey"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="@string/survey_m1_text_ultimodo_coche_valquiler" />
                    <!--Vehiculo privado-->
                    <LinearLayout
                        android:id="@+id/survey_layout_ultimodo_vehiculo"
                        android:layout_width="wrap_content"
                        android:layout_height="57dp"

                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/survey_text_ultimodo_coche_vprivado"
                            android:layout_width="131dp"
                            android:layout_height="56dp"
                            android:layout_marginTop="@dimen/medium_padding"
                            android:background="@color/aenaDarkGrey"
                            android:gravity="center_horizontal|center_vertical"
                            android:text="@string/survey_m1_text_ultimodo_coche_vprivado" />

                        <LinearLayout
                            android:id="@+id/survey_layout_ultimodo_vehiculo1"
                            android:layout_width="336dp"
                            android:layout_height="57dp"

                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/survey_text_ultimodo_coche_vprivado_cvviaja"
                                android:layout_width="match_parent"
                                android:layout_height="25dp"
                                android:layout_marginTop="@dimen/medium_padding"
                                android:background="@color/aenaDarkGrey"
                                android:gravity="center_horizontal|center_vertical"
                                android:text="@string/survey_m1_text_ultimodo_coche_vprivado_cvviaja" />

                            <TextView
                                android:id="@+id/survey_text_ultimodo_coche_vprivado_cvdespedir"
                                android:layout_width="match_parent"
                                android:layout_height="25dp"
                                android:layout_marginTop="@dimen/medium_padding"
                                android:background="@color/aenaDarkGrey"
                                android:gravity="center_horizontal|center_vertical"
                                android:text="@string/survey_m1_text_ultimodo_coche_vprivado_cvdespedir"
                                android:textSize="15.5sp" />
                        </LinearLayout>
                    </LinearLayout>
                    <!---Fin vehiculo privado-->
                    <TextView
                        android:id="@+id/survey_text_ultimodo_autobus_adiscrecional"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginTop="@dimen/medium_padding"
                        android:background="@color/aenaDarkGrey"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="@string/survey_m1_text_ultimodo_autobus_adiscrecional" />
                    <!--Autobus publico-->
                    <LinearLayout
                        android:id="@+id/survey_layout_ultimodo_trans_autobus"
                        android:layout_width="match_parent"
                        android:layout_height="86dp"

                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/survey_text_ultimodo_apublico"
                            android:layout_width="131dp"
                            android:layout_height="82dp"
                            android:layout_marginTop="@dimen/medium_padding"
                            android:background="@color/aenaDarkGrey"
                            android:gravity="center_horizontal|center_vertical"
                            android:text="@string/survey_m1_text_ultimodo_autobus_apublico" />

                        <LinearLayout
                            android:id="@+id/survey_layout_vertical_apublico"
                            android:layout_width="329dp"
                            android:layout_height="90dp"

                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/survey_text_ultimodo_autobus_apublico_aurbano"
                                android:layout_width="match_parent"
                                android:layout_height="25dp"
                                android:layout_marginTop="@dimen/medium_padding"
                                android:background="@color/aenaDarkGrey"
                                android:gravity="center_horizontal|center_vertical"
                                android:text="@string/survey_m1_text_ultimodo_autobus_apublico_aurbano" />

                            <TextView
                                android:id="@+id/survey_text_ultimodo_autobus_apublico_ainterurbano"
                                android:layout_width="match_parent"
                                android:layout_height="25dp"
                                android:layout_marginTop="@dimen/medium_padding"
                                android:background="@color/aenaDarkGrey"
                                android:gravity="center_horizontal|center_vertical"
                                android:text="@string/survey_m1_text_ultimodo_autobus_apublico_ainterurbano" />

                            <TextView
                                android:id="@+id/survey_text_ultimodo_autobus_apublico_alargadistancia"
                                android:layout_width="match_parent"
                                android:layout_height="25dp"
                                android:layout_marginTop="@dimen/medium_padding"
                                android:background="@color/aenaDarkGrey"
                                android:gravity="center_horizontal|center_vertical"
                                android:text="@string/survey_m1_text_ultimodo_autobus_apublico_alargadistancia" />
                        </LinearLayout>
                    </LinearLayout>
                    <!---Fin autobus publico-->
                    <TextView
                        android:id="@+id/survey_text_ultimodo_tren_cercanias"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginTop="@dimen/medium_padding"
                        android:background="@color/aenaDarkGrey"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="@string/survey_m1_text_ultimodo_tren_cercanias" />

                    <TextView
                        android:id="@+id/survey_text_ultimodo_metro_vacio"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginTop="@dimen/medium_padding"
                        android:background="@color/aenaDarkGrey" />

                    <LinearLayout
                        android:id="@+id/survey_layout_modo_otros"
                        android:layout_width="match_parent"
                        android:layout_height="27dp"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/survey_text_modo_otros"
                            android:layout_width="131dp"
                            android:layout_height="27dp"
                            android:layout_gravity="center|center_horizontal"
                            android:layout_marginTop="@dimen/medium_padding"
                            android:background="@color/aenaDarkGrey"
                            android:gravity="center"
                            android:text="@string/survey_m1_text_ultimodo_otros_especificar" />

                        <EditText
                            android:id="@+id/survey_edit_modo_otros"
                            android:layout_width="331dp"
                            android:layout_height="35dp"
                            android:layout_marginTop="@dimen/medium_padding"
                            android:background="@color/aenaLightGrey"
                            android:gravity="top"
                            android:textSize="14sp"
                            android:visibility="visible" />

                    </LinearLayout>


                </LinearLayout>

                <!--- 5 columna -->
                <LinearLayout
                    android:id="@+id/survey_layout_modo_radio"
                    android:layout_width="67dp"
                    android:layout_height="500dp"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/survey_text_modo_s4"
                        android:layout_width="match_parent"
                        android:layout_height="96dp"
                        android:background="@color/aenaDarkGrey"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="@string/survey_text_modo_s4_tit"
                        android:textColor="@color/aenaBlue" />

                    <RadioGroup
                        android:id="@+id/survey_radiogroup_modo_s4"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/survey_radio_modo_s4_option11"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_marginTop="@dimen/medium_padding"
                            android:background="@color/aenaDarkGrey" />

                        <RadioButton
                            android:id="@+id/survey_radio_modo_s4_option24"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_marginTop="@dimen/medium_padding"
                            android:background="@color/aenaDarkGrey" />

                        <RadioButton
                            android:id="@+id/survey_radio_modo_s4_option25"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_marginTop="@dimen/medium_padding"
                            android:background="@color/aenaDarkGrey" />

                        <RadioButton
                            android:id="@+id/survey_radio_modo_s4_option22"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_marginTop="@dimen/medium_padding"
                            android:background="@color/aenaDarkGrey" />

                        <RadioButton
                            android:id="@+id/survey_radio_modo_s4_option23"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_marginTop="@dimen/medium_padding"
                            android:background="@color/aenaDarkGrey" />

                        <RadioButton
                            android:id="@+id/survey_radio_modo_s4_option35"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_marginTop="@dimen/medium_padding"
                            android:background="@color/aenaDarkGrey" />

                        <RadioButton
                            android:id="@+id/survey_radio_modo_s4_option37"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_marginTop="@dimen/medium_padding"
                            android:background="@color/aenaDarkGrey" />

                        <RadioButton
                            android:id="@+id/survey_radio_modo_s4_option39"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_marginTop="@dimen/medium_padding"
                            android:background="@color/aenaDarkGrey" />

                        <RadioButton
                            android:id="@+id/survey_radio_modo_s4_option38"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_marginTop="@dimen/medium_padding"
                            android:background="@color/aenaDarkGrey" />

                        <RadioButton
                            android:id="@+id/survey_radio_modo_s4_option42"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_marginTop="@dimen/medium_padding"
                            android:background="@color/aenaLightGrey"
                            android:cursorVisible="false" />

                        <RadioButton
                            android:id="@+id/survey_radio_modo_s4_option43"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_marginTop="@dimen/medium_padding"
                            android:background="@color/aenaDarkGrey"
                            android:visibility="invisible"/>

                        <RadioButton
                            android:id="@+id/survey_radio_modo_s4_option91"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_marginTop="@dimen/medium_padding"
                            android:background="@color/aenaDarkGrey" />
                    </RadioGroup>
                </LinearLayout>

            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

</LinearLayout>

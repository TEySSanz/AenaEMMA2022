<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="0dp"
        android:background="@color/aenaLightGrey">

        <TextView
            android:id="@+id/list_item_text_numEncuesta"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="2dp"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="XXX"
            android:textColor="@color/aenaBlue"
            android:textSize="14dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/list_item_text_fecha"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:padding="2dp"
            android:hint="XXX"
            android:gravity="center"
            android:textColor="@color/aenaBlue"
            android:textSize="14dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/list_item_text_hora"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:padding="2dp"
            android:hint="XXX"
            android:gravity="center"
            android:textColor="@color/aenaBlue"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/list_item_text_aeropuerto"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:padding="2dp"
            android:hint="XXX"
            android:gravity="center"
            android:textColor="@color/aenaBlue"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/list_item_text_puerta"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:padding="2dp"
            android:hint="AAA"
            android:gravity="center"
            android:textColor="@color/aenaBlue"
            android:textSize="14dp"
            android:textStyle="bold" />


    </LinearLayout>
</LinearLayout>
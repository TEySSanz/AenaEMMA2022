                    android:layout_height="wrap_content"
                    android:text="@string/survey_text_horaent1" />

                <EditText
                    android:id="@+id/survey_edit_horaent1_hora"
                    style="@style/SurveyQuestionEdit"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:hint="@string/hora"
                    android:inputType="number"
                    android:maxLength="2"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/survey_text_horaent1_2puntos"
                    style="@style/SurveyQuestionTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/dos_puntos" />


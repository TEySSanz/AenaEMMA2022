<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="ExtraText">
    <LinearLayout
        android:id="@+id/survey_layout_eleccovid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        style="@style/SurveySingleQuestion"
        android:visibility="gone">

        <TextView
            android:id="@+id/survey_text_eleccovid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/SurveyQuestionTitle"
            android:text="@string/survey_m1_text_eleccovid"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/survey_text_eleccovid_m4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/SurveyQuestionTitle"
            android:text="@string/survey_m4_text_eleccovid"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/survey_text_eleccovid_m5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/SurveyQuestionTitle"
            android:text="@string/survey_m5_text_eleccovid"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/survey_text_eleccovid_m2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/SurveyQuestionTitle"
            android:text="@string/survey_m2_text_eleccovid"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/survey_text_eleccovid_GC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/SurveyQuestionTitle"
            android:text="@string/survey_m2_text_eleccovid_GC"
            android:visibility="gone"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/survey_radiogroup_eleccovid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/survey_radio_eleccovid_option1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/survey_m1_radio_eleccovid_option1" />

                <RadioButton
                    android:id="@+id/survey_radio_eleccovid_option2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/survey_m1_radio_eleccovid_option2" />

                <RadioButton
                    android:id="@+id/survey_radio_eleccovid_option3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/survey_m1_radio_eleccovid_option3" />

                <RadioButton
                    android:id="@+id/survey_radio_eleccovid_option4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/survey_m1_radio_eleccovid_option4" />

                <RadioButton
                    android:id="@+id/survey_radio_eleccovid_option5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/survey_m1_radio_eleccovid_option5" />
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
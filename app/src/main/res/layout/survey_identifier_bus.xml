<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/aenaGreen">

    //Identificadores de encuesta

    <LinearLayout
        android:id="@+id/survey_ll_identifier_bus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/standard_padding"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/survey_text_fecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:padding="@dimen/small_padding"
                android:text="@string/survey_text_fecha"
                android:textColor="@color/aenaBlue"
                android:textSize="@dimen/abc_text_size_medium_material"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/survey_edit_fecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/survey_text_fecha"
                android:layout_centerHorizontal="true"
                android:background="@color/aenaLightGrey"
                android:focusable="false"
                android:gravity="center"
                android:hint="dd/MM/AAAA"
                android:inputType="date"
                android:paddingLeft="@dimen/standard_padding"
                android:paddingTop="@dimen/small_padding"
                android:paddingRight="@dimen/standard_padding"
                android:paddingBottom="@dimen/small_padding"
                android:textSize="@dimen/abc_text_size_medium_material"
                android:textStyle="bold" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/survey_text_hora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:padding="@dimen/small_padding"
                android:text="@string/survey_text_hora"
                android:textColor="@color/aenaBlue"
                android:textSize="@dimen/abc_text_size_medium_material"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/survey_edit_hora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/survey_text_hora"
                android:layout_centerHorizontal="true"
                android:background="@color/aenaLightGrey"
                android:focusable="false"
                android:gravity="center"
                android:hint="hh:mm"
                android:inputType="time"
                android:paddingLeft="@dimen/standard_padding"
                android:paddingTop="@dimen/small_padding"
                android:paddingRight="@dimen/standard_padding"
                android:paddingBottom="@dimen/small_padding"
                android:textSize="@dimen/abc_text_size_medium_material"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/survey_text_numComp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:padding="@dimen/small_padding"
                android:text="@string/survey_text_numCompania"
                android:textColor="@color/aenaBlue"
                android:textSize="@dimen/abc_text_size_medium_material"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/survey_edit_numComp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/survey_text_numComp"
                android:layout_centerHorizontal="true"
                android:background="@color/aenaLightGrey"
                android:gravity="center"
                android:hint="xxx"
                android:maxLength="3"
                android:paddingLeft="@dimen/standard_padding"
                android:paddingTop="@dimen/small_padding"
                android:paddingRight="@dimen/standard_padding"
                android:paddingBottom="@dimen/small_padding"
                android:textSize="@dimen/abc_text_size_medium_material"
                android:textStyle="bold" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/survey_text_numBus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:padding="@dimen/small_padding"
                android:text="@string/survey_text_numBus"
                android:textColor="@color/aenaBlue"
                android:textSize="@dimen/abc_text_size_medium_material"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/survey_edit_numBus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/survey_text_numBus"
                android:layout_centerHorizontal="true"
                android:background="@color/aenaLightGrey"
                android:gravity="center"
                android:hint="xxx"
                android:maxLength="3"
                android:paddingLeft="@dimen/standard_padding"
                android:paddingTop="@dimen/small_padding"
                android:paddingRight="@dimen/standard_padding"
                android:paddingBottom="@dimen/small_padding"
                android:textSize="@dimen/abc_text_size_medium_material"
                android:textStyle="bold" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/survey_text_numDarsena"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:padding="@dimen/small_padding"
                android:text="@string/survey_text_numDarsena"
                android:textColor="@color/aenaBlue"
                android:textSize="@dimen/abc_text_size_medium_material"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/survey_edit_numDarsena"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/survey_text_numDarsena"
                android:layout_centerHorizontal="true"
                android:background="@color/aenaLightGrey"
                android:gravity="center"
                android:hint="xxx"
                android:maxLength="3"
                android:paddingLeft="@dimen/standard_padding"
                android:paddingTop="@dimen/small_padding"
                android:paddingRight="@dimen/standard_padding"
                android:paddingBottom="@dimen/small_padding"
                android:textSize="@dimen/abc_text_size_medium_material"
                android:textStyle="bold" />


        </RelativeLayout>


    </LinearLayout>
    //End of Identificador de Encuesta


</LinearLayout>
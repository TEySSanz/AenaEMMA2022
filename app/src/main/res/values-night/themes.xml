<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AenaEMMA2022" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/md_red_200</item>
        <item name="colorPrimaryVariant">@color/md_red_700</item>
        <item name="colorOnPrimary">@color/md_black_1000</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/md_teal_200</item>
        <item name="colorSecondaryVariant">@color/md_teal_200</item>
        <item name="colorOnSecondary">@color/md_black_1000</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Background color. -->
        <item name="android:windowBackground">@color/md_black_1000</item>
        <!-- Customize your theme here. -->
    </style>
    <!-- Customize your theme here. -->
    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/md_black_1000</item>
    </style>

    <!-- Survey model -->
    <style name="SurveySingleQuestion">
        <item name="android:background">@color/md_black_1000</item>
        <item name="android:padding">32dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>

        <!--<item name="android:layout_margin">@dimen/standard_padding</item>-->
    </style>

    <style name="SurveyQuestionTitle" parent="@android:style/TextAppearance.Medium" >
        <item name="android:textColor">@color/md_black_1000</item>
        <item name="android:padding">8dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SurveyQuestionAspect" parent="@android:style/TextAppearance.Medium" >
        <item name="android:textColor">@color/md_black_1000</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/md_black_1000</item>
        <item name="colorControlActivated">@color/md_black_1000</item>
    </style>
</resources>